<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_office"
    tools:context="net.simplifiedlearning.sqlitecrudexample.MainActivity">


    <TextView
        android:id="@+id/textViewViewEmployees"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="38dp"
        android:background="@android:color/background_light"
        android:padding="16dp"
        android:text="List Profils"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="327dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/back_office"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/holo_blue_light"
            android:text="Nouveau Profil"
            android:textAlignment="inherit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@android:color/background_light"
            android:hint="Nom et Prenom" />

        <TextView
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:paddingLeft="6dp"
            android:text="Select Type Profil" />

        <Spinner
            android:id="@+id/spinnerDepartment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/background_light"
            android:entries="@array/departments" />

        <EditText
            android:id="@+id/editTextSalary"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_light"
            android:hint="xxxx@gmail.com" />

        <Button
            android:id="@+id/buttonAddEmployee"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="67dp"
            android:layout_marginTop="23dp"
            android:background="@android:color/holo_green_light"
            android:text="Enregistrer"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="113dp"
        android:layout_alignStart="@+id/textViewViewEmployees"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="289dp"
        app:srcCompat="@drawable/menu" />

</RelativeLayout>
